{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": true,
    "module": "ESNext",
    "target": "ES2021",
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "custom.d.ts"]
}
